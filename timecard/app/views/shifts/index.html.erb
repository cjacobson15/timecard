<div class="page-header">
  <h1>
    Shifts
    <a href="/shifts/new" class="btn btn-lg btn-success">New Shift</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Job</th>
        <th>Total pay</th>
        <th>Approval</th>
        <th>Reimbursements</th>
        <th>Bonus</th>
        <th>Hours worked</th>
        <th>Time out</th>
        <th>Time in</th>
        <th>Actions</th>
      </tr>

      <% @shifts.each do |shift| %>
      <tr>
        <td><%= shift.job_id %></td>
        <td><%= shift.total_pay %></td>
        <td><%= shift.approval %></td>
        <td><%= shift.reimbursements %></td>
        <td><%= shift.bonus %></td>
        <td><%= shift.hours_worked %></td>
        <td><%= shift.time_out %></td>
        <td><%= shift.time_in %></td>
        <td>
          <a href="/shifts/<%= shift.id %>" class="btn btn-primary">Show</a>
          <a href="/shifts/<%= shift.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_shift/<%= shift.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
